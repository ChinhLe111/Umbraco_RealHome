@inherits UmbracoViewPage
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = null;
}
@{ 
    var homePage = Umbraco.AssignedContentItem.AncestorOrSelf<RealHome>();
}

<section class="header-w3ls">
    <button id="trigger-overlay" type="button">
        <i class="fa fa-bars" aria-hidden="true"></i>
    </button>
    <h1>
        <a href="">
            <span>
                @homePage.LastName <span class="display-block"> @homePage.FirstName</span>
            </span>
            <img src="@homePage.Logo.Url" alt="Logo 3S (biểu tượng).png" class="img-responsive">
        </a>
    </h1>
    <ul class="logo-right-w3ls">
        <li>@homePage.Mail1</li>
        <li>
            <a href="mailto:info@example.com">@homePage.Mail2</a>
        </li>
    </ul>
    <div class="header-right">
        <i class="fa fa-volume-control-phone" aria-hidden="true"></i>
        <p>@homePage.Phone</p>
    </div>
    <div class="clearfix"></div>
</section>